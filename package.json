{
  "name": "lit-ui-monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "A framework-agnostic component library built on Lit.js with Tailwind styling",
  "type": "module",
  "packageManager": "pnpm@10.0.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "dev:apps": "concurrently -n landing,docs -c blue,green \"pnpm --filter lit-ui-landing dev\" \"pnpm --filter lit-ui-docs dev\"",
    "build": "pnpm -r run build",
    "build:packages": "pnpm --filter './packages/**' run build",
    "test": "pnpm -r run test",
    "lint": "pnpm -r run lint",
    "changeset": "changeset",
    "version": "changeset version",
    "ci:publish": "pnpm build:packages && changeset publish --access public"
  },
  "keywords": [
    "lit",
    "web-components",
    "tailwind",
    "ui",
    "components"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.28.1",
    "concurrently": "^9.2.1",
    "typescript": "^5.9.3"
  }
}
