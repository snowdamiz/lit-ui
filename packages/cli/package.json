{
  "name": "@lit-ui/cli",
  "version": "0.1.0",
  "description": "Add lit-ui components to your project",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/user/lit-ui.git",
    "directory": "packages/cli"
  },
  "type": "module",
  "bin": {
    "lit-ui": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./theme": {
      "import": "./dist/theme/index.js",
      "types": "./dist/theme/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "lit",
    "cli",
    "components",
    "web-components"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "citty": "^0.2.0",
    "colorjs.io": "^0.6.1",
    "consola": "^3.4.0",
    "defu": "^6.1.4",
    "diff": "^8.0.3",
    "execa": "^9.5.2",
    "fs-extra": "^11.3.0",
    "ora": "^9.3.0",
    "package-manager-detector": "^1.6.0",
    "pathe": "^2.0.2",
    "picocolors": "^1.1.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "tsup": "^8.3.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
